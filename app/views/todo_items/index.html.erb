<h1 class="list_title" id="logo">To Do</h1>
<div class="container">
  <div class="text-center">
    <table class="table">
      <thead>
        <tr>
          <th>
          <th>Description</th>
          <!-- <th>Checkbox</th> -->
          <th colspan="3"></th>
        </tr>
      </thead>


      <tbody>
      <% @todo_items.each do |todo_item| %>
        <% unless todo_item.checkbox %>
          <tr id="<%= todo_item.id %>">
            <td><input type="checkbox" class="checkbox" id="<%= todo_item.id %>">  </td>
            <td><%= todo_item.description %></td>
            <td><%= link_to_modal '', edit_todo_item_path(todo_item), class: "fa fa-pencil-square-o fa-2x pencil" %></td>
            <td><%= link_to '', todo_item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'fa fa-trash fa-2x trash' %></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </div>

  <br>
  <div class="text-center">
    <a href="http://localhost:3000/todo_items/new" data-remote="true" id="new_link"><button type="button" class="btn btn-lg btn-primary">New Item</button></a>
  </div>
</div>


