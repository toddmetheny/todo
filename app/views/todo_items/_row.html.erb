<% @todo_items.each do |todo_item| %>
	<tr id="<%= todo_item.id %>">
		<td><input type="checkbox" class="checkbox" id="<%= todo_item.id %>"></td>
		<td><%= todo_item.description %></td>
		<td><%= todo_item.checkbox %></td>
		<td><%= link_to_modal '', edit_todo_item_path(todo_item), class: "fa fa-pencil-square-o fa-2x" %></td>
		<td><%= link_to '', todo_item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'fa fa-trash fa-2x' %></td>
	</tr>
<% end %>
