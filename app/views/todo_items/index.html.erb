<h1 class="list_title">To Do List</h1>
<div class="container">
  <div class="text-center">
    <table class="table">
      <thead>
        <tr>
          <th>
          <th>Description</th>
          <th>Checkbox</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @todo_items.each do |todo_item| %>
          <tr>
            <td><input type="checkbox" id="<%= @todo_item %>"></td>
            <td><%= todo_item.description %></td>
            <td><%= todo_item.checkbox %></td>
            <td><%= link_to 'Show', todo_item %></td>
            <td><%= link_to 'Edit', edit_todo_item_path(todo_item) %></td>
            <td><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <br>
  <div class="text-center">
  <%= link_to 'New Todo item', new_todo_item_path %>
  </div>
</div>
